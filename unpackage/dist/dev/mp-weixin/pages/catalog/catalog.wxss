    height: 100rpx;
    width: 100%;
    font-size: 28rpx;
    line-height: 100rpx;
    text-align: center;
    color: #333;
    position: relative;
}
.left-aside .f-item.active {
      color: #f96d4d;
      background-color: #f8f8f8;
}
.left-aside .f-item.active:before {
        content: '';
        position: absolute;
        top: 50%;
