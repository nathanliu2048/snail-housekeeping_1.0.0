page {
  background-color: #f7f7f7;
  padding-bottom: 160rpx;
}
.carousel {
  background-color: #fff;
  position: relative;
  height: 722rpx;
}
.carousel swiper {
    height: 100%;
}
.carousel .swiper-item {
    height: 750rpx;
}
.carousel .swiper-item .img-wrap {
      width: 100%;
      height: 100%;
}
.carousel .swiper-item image {
      width: 100%;
      height: 100%;
}
.pic-desc {
  margin-top: 20rpx;
  background-color: #fff;
}
.page-btn {
  position: fixed;
  left: 30rpx;
  bottom: 30rpx;
  background-color: #fff;
}
.page-btn .buy-btn {
    width: 690rpx;
    height: 100rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
    color: #fff;
    background: -webkit-linear-gradient(left, #f17e64, #f96d4d, #f36848);
    background: linear-gradient(left, #f17e64, #f96d4d, #f36848);
    box-shadow: 1px 2px 5px rgba(219, 63, 96, 0.4);
    border-radius: 16rpx;
